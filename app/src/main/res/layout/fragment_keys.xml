<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/cl_key_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_pearl"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="5">

        <Button
            android:id="@+id/button_AC"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:text="AC"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_del"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_size"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:textSize="30sp"
            android:text="DEL"/>

        <Button
            android:id="@+id/button_per_cent"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="%"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_divide"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:textColor="@color/yello_sunflower"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="รท"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_7"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_8"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_9"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_multiply"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:textColor="@color/yello_sunflower"
            android:background="@android:color/transparent"
            android:text="ร"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_4"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_5"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_6"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_minus"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:textColor="@color/yello_sunflower"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_1"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_2"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_3"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_plus"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:textColor="@color/yello_sunflower"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_comma"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text=","
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_0"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_parentheses"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:text="()"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_equal"
            android:contentDescription="@string/keys"
            android:layout_width="0dp"
            app:layout_columnWeight="1"
            android:layout_height="@dimen/button_size"
            android:background="@color/yello_sunflower"
            android:text="="
            android:textSize="30sp"
            android:theme="@style/EqualButtonTheme" />


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>