<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eerie_black</item>
        <item name="colorPrimaryVariant">@color/dark_liver</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/light_dark_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DeleteButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_c20000</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="EqualButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/vivid_cambodge</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="ButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/eerie_black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    <style name="OpButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/eerie_black</item>
        <item name="android:textColorPrimary">@color/yellow_sunflower</item>
    </style>

</resources>